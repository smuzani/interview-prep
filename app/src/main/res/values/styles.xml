<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan.dark</item>
        <item name="colorAccent">@color/bluegrey</item>
    </style>

    <style name="BtColored" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorAccent</item>
        <item name="android:textColor">@drawable/colored_button_text_color</item>
    </style>

    <style name="BtFlat" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@drawable/borderless_button_text_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
